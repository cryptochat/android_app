<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/bubble_in"
            android:maxWidth="200dp"
            android:text="Привет Вася, как твои дела? Понятно" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTime"
                android:text="20:15"
                android:textSize="12sp"
                android:textColor="#FF878E96"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignBaseline="@+id/textViewMessage"
                android:layout_toRightOf="@+id/textViewMessage"
                android:layout_toEndOf="@+id/textViewMessage" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>